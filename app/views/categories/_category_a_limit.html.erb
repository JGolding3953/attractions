<ul>
<% @category_attractions_limit.each do |c_a| %>
  <li>
    <div id="image">
      <%= link_to image_tag(c_a.imageurl, :alt => "image "+c_a.id.to_s, :title => c_a.name), c_a %>
    </div>
    <div id="text">
      <h3><small><%= link_to c_a.name, c_a %></small></h3>
    </div>
  </li>
<% end %>
</ul>        