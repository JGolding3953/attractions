<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Attraction</th>
      <th>User</th>
      <th>Comments</th>
      <th>Rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.attraction_id %></td>
        <td><%= review.user_id %></td>
        <td><%= review.comments %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Show', [@parent, review] %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@parent, review]) %></td>
        <td><%= link_to 'Destroy', [@parent, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>