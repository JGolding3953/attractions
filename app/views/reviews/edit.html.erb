<div class="row">
  <div class="small-12 columns">
    
    <div class="row">
      <ul class="breadcrumb_nav">
        <li><%= link_to 'Home', root_path %></li>
        <% if @user %>
          <li><%= link_to 'Users', users_path %></li>
          <li><%= link_to 'Profile', user_path(@user) %></li>
          <li><%= link_to 'Reviews', user_reviews_path(@user) %></li>
        <% elsif @attraction %>
          <li><%= link_to @attraction.category.name, category_path(@attraction.category.id) %></li>
          <li><%= link_to @attraction.name, attraction_path(@attraction) %></li>
          <li><%= link_to 'Reviews', attraction_reviews_path(@attraction) %></li>
        <% end %>
        <li><%= link_to 'Review', [@parent, @review] %></li>
        <li class="current">Edit</li>
      </ul>
    </div>
    
    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
        <h3 id="title"><%= @review.attraction.name %></h3>
        <h4 id="title">Edit review</h4>
      </div>
    </div>
    
    <%= render 'form' %>
    
    <%= link_to 'Show', [@parent, @review] %> |
    <%= link_to 'Back', polymorphic_path([@parent, @review]) %>
    
 </div>
</div>
