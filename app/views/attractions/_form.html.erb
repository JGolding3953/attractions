<div class="row">
  <div class="small-12 columns">
    
    <%= form_for @attraction do |f| %>
      <% if @attraction.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@attraction.errors.count, "error") %> prohibited this attraction from being saved:</h2>   
          <ul>
            <% @attraction.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">
          <%= f.label :name %>
          <%= f.text_field :name, :size => "30" %>
        </div>
      </div><br />
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">        
          <%= f.label :summary %>
          <%= f.text_area :summary, :size => "30x10" %>
        </div>
      </div><br />
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">        
          <%= f.label :description %>
          <%= f.text_area :description, :size => "30x10" %>
        </div>
      </div><br />
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">
          <%= f.label :category %><br />
          <% Category.all.each do |c| %>
            <%= radio_button_tag "attraction[category_id]", c.category_id, @attraction.category_id == c.category_id %>
            <%= c.name %><br />
          <% end %>
        </div>
      </div><br />
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">
          <%= f.label :image_url %>
          <%= f.text_field :imageurl, :size => "40" %>
        </div>
      </div><br />
    
      <div class="row">
        <div class="small-12 medium-4 small-centered columns">
          <%= f.label :website %>
          <%= f.text_field :website, :size => "40" %>
        </div>
      </div><br />
    
      <br /><div class="row">
        <div class="small-12 medium-4 small-centered columns">
          <div class="row">
            <div class="small-12 medium-6 columns">
              <%= f.submit 'Update', :class => 'long-button' %>
            </div>
            <div class="small-12 medium-6 columns">
              <a href="<%= attractions_path %>" class="long-button-grey">Cancel</a>
            </div>
          </div>
        </div>
      </div><br />
    <% end %>
    
  </div>
</div>
